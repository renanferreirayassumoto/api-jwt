datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String
  password String
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
  color String
  brand String
}
